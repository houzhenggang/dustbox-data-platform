extends ../layouts/main

block content

    main.container-fluid
        div.container
            div.col-md-4.col-md-offset-4
                h1.text-center Create New User
                form#formLogin(method="POST", action="/users/make")
                    div.form-group
                        label(for="firstname") Firstname
                        input#inputFirstname.form-control(type="text", placeholder="Firstname", name="firstname", required)
                    div.form-group
                        label(for="lastname") Lastname
                        input#inputLastname.form-control(type="text", placeholder="Lastname", name="lastname", required)
                    div.form-group
                        label(for="email") Email
                        input#inputEmail.form-control(type="text", placeholder="Email", name="email", required)
                    div.form-group
                        label(for="username") Username
                        input#inputUsername.form-control(type="text", placeholder="Username", name="username", required)
                    div.form-group
                        label(for="password") Password
                        input#inputPassword.form-control(type="password", placeholder="*********", name="password", required)
                    div.text-center
                        input.btn.btn-primary(type="submit", value="Create account")
