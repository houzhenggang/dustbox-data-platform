doctype html
html
    head
        title= title
        link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
        link(rel="stylesheet", href="/stylesheets/style.css")
        link(rel="stylesheet", href="/stylesheets/bootstrap-tagsinput.css")
        <link rel="stylesheet" type="text/css" href="/stylesheets/jasny-bootstrap/jasny-bootstrap.css" />

    body
        // Show navbar-on-mobile only.
        // http://stackoverflow.com/questions/26225510/only-show-bootstrap-navbar-on-mobile
        <nav class="navbar navbar-default navbar-fixed-topp visible-xs">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/">Citizen Sense</a>
              // <a class="navbar-brand" href="#">
               // <img alt="Brand" width="20" height="20" src="data:image/png;base64,">
              //</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">
                if isAdmin
                    <li><a href="/streams/make"><span class="glyphicon glyphicon-pencil"></span> Create a Stream</a></li>
                <li><a href="/streams"><span class="glyphicon glyphicon-list"></span> Explore Streams</a></li>

                if isAdmin
                    <li><a href="/users/settings"><span class="glyphicon glyphicon-cog"></span> Account Settings</a></li>
                    <li><a href="/users/make"><span class="glyphicon glyphicon-user"></span> Create an User</a></li>
                    <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>

                if !isAdmin
                    <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Log In</a></li>
              </ul>
            </div><!-- /.navbar-collapse -->
          </div><!-- /.container-fluid -->
        </nav>

        // http://www.jasny.net/bootstrap/javascript/#offcanvas
        <nav id="myNavmenu" class="navmenu navmenu-default navmenu-fixed-left offcanvas hidden-xs" role="navigation">
          <a class="navmenu-brand" href="/">Citizen Sense</a>
          <ul class="nav navmenu-nav">
            if isAdmin
                <li><a href="/streams/make"><span class="glyphicon glyphicon-pencil"></span> Create a Stream</a></li>
            <li><a href="/streams"><span class="glyphicon glyphicon-list"></span> Explore Streams</a></li>

            if isAdmin
                <li><a href="/users/settings"><span class="glyphicon glyphicon-cog"></span> Account Settings</a></li>
                <li><a href="/users/make"><span class="glyphicon glyphicon-user"></span> Create an User</a></li>
                <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Log Out</a></li>

            if !isAdmin
                <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Log In</a></li>
          </ul>
        </nav>

        header.hidden-xs
            nav.navbar-fixed-top(style="padding-top:10px;")
                div.container-fluid
                    div.row
                        div.col-md-12

                            <a class="button-slide-menu" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="body"><span class="pull-left glyphicon glyphicon-align-justify"></span></a>

                            a.pull-right.button-nav(href="/", title="Home")
                                span.glyphicon.glyphicon-home(aria-hidden="true")

        if errorMessage
            div.alert.alert-danger(role="alert")
                button.close(type="button", data-dismiss="alert", aria-label="Close")
                    span(aria-hidden="true") &times;
                | #{errorMessage}
        if successMessage
            div.alert.alert-success(role="alert")
                button.close(type="button", data-dismiss="alert", aria-label="Close")
                    span(aria-hidden="true") &times;
                | #{successMessage}

        block content

        footer
            div.container-fluid
                p Brought to you with tough ‚ù§ by <a href="http://citizensense.net/" target="_blank">Citizen Sense</a>.

    block importScripts
        script(src="/javascripts/jquery.min.js")
        script(src="/javascripts/bootstrap.min.js")
        script(src="/javascripts/bootstrap-tagsinput.js")
        <script src="/javascripts/jasny-bootstrap/jasny-bootstrap.js"></script>
        <script src="/vendors/bootstrap-validator/dist/validator.min.js"></script>
        script(src="/javascripts/common.js")
